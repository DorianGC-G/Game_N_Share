<h1>Edit</h1>

<%= @offer.title %>

<%= simple_form_for @offer do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :item %>
    <%= f.input :description %>
    <%= f.input :price_per_day, as: :integer %>
    <%= f.input :location %>
    <%= f.input :start_date, as: :string, start_year: DateTime.now,
                            order: [:day, :month, :year] %>
    <%= f.input :end_date, as: :string, start_year: Date.today,
                          order: [:day, :month, :year] %>

  </div>
  <div class="d-flex justify-content-between">
    <div class="form-actions">
      <%= f.button :submit, "Envoyer", class: "btn btn-dark my-auto" %>
    </div>
  </div>
<% end %>
