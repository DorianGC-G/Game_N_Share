<div class="container">
  <div class="first-box px-0">
    <h1>Mes annonces</h1>
    <div class="sorting d-flex justify-content-end">
      <div class="justify-content-between">
        <%= link_to dashboard_path(sort: "price-up") do %>
          <i class="fas fa-chevron-up"></i>
        <% end %>

        <%= link_to dashboard_path(sort: "price-down") do %>
          <i class="fas fa-chevron-down"></i>
        <% end %>

        <%= link_to dashboard_path(sort: "location") do %>
          <i class="fas fa-map-marker-alt"></i>
        <% end %>
      </div>
    </div>

    <%= render "shared/simple_cards_index", offers: @offers %>
  </div>
</div>
